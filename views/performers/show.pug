extends _layout.pug

block append body
  +buttonGroup.mb-4
    +buttonInGroup(
      hx-include="#form",
      hx-put=`/performers/${performer.id}`,
      hx-target="#form",
      title=__("Save")
    )
      include /_mixin/button-savable.pug
    +buttonInGroup(
      hx-delete=`/performers/${performer.id}/confirm`,
      hx-target="#modal",
      title=__("Delete"),
      type="button"
    )
      i.text-xl(class="icon-[material-symbols--delete-outline]")
      span.hidden(class="sm:inline-block")= __("Delete")

  #form.mb-4
    include _info.pug
