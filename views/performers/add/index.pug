include /_mixin.pug

form.mb-4.flex.flex-wrap.justify-between.gap-2(
  action=`${basePath}/performers/add?_list`,
  hx-swap="show:none",
  hx-target="#add-performer",
  hx-trigger="sort-changed from:body, input from:input changed delay:250ms"
)
  - var query = qs();

  +input(
    autofocus="",
    name="search",
    placeholder=__("Search"),
    type="search"
  )

  include /performers/_sort.pug

#add-performer
  include _list.pug
