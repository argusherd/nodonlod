include _mixin.pug

p.mb-4.text-lg.text-gray-700(class="dark:text-gray-300")= message

+buttonGroup.ml-auto
  +buttonInGroup#confirm(@click="show = false", hx-delete=route)
    i.text-2xl(class="icon-[material-symbols--check]")
    span= __("Confirm")

  +buttonInGroup#cancel(@click="show = false")
    i.text-2xl(class="icon-[material-symbols--close]")
    span= __("Cancel")
