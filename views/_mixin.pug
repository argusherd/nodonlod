mixin copyIcon(copyContent)
  i(
    :class="copy ? 'icon-[material-symbols--check]' : 'icon-[ph--copy]'",
    @click=`
      copy = true;
      navigator.clipboard.writeText('${copyContent}');
      setTimeout(() => (copy = false), 1000)
    `,
    x-data="{ copy: false }"
  )

mixin breadcrumb(href, icon, pageName = "")
  i.text-xl(class="icon-[mingcute--right-line]")

  a.flex.items-center.gap-2(
    class="last:text-blue-600 hover:underline last:dark:text-blue-400",
    href=href
  )
    i(class=icon)

    if pageName
      span #{ pageName }

mixin buttonGroup
  .flex.w-fit.divide-x.rounded-lg.border.bg-white(
    class="rtl:flex-row-reverse dark:divide-gray-700 dark:border-gray-700 dark:bg-gray-900"
  )&attributes(attributes)
    block

mixin buttonInGroup
  if attributes.href
    a.flex.shrink-0.items-center.gap-x-2.px-4.py-2.text-sm.text-gray-600.transition-colors.duration-200(
      class="hover:bg-gray-100 sm:text-base dark:text-gray-300 dark:hover:bg-gray-800"
    )&attributes(attributes)
      block
  else
    button.flex.shrink-0.items-center.gap-x-2.px-4.py-2.text-sm.text-gray-600.transition-colors.duration-200(
      class="hover:bg-gray-100 sm:text-base dark:text-gray-300 dark:hover:bg-gray-800"
    )&attributes(attributes)
      block

mixin list
  .flow-root.rounded-lg.border.border-gray-100.py-3.shadow-sm(
    class="dark:border-gray-700"
  )&attributes(attributes)
    dl.-my-3.divide-y.divide-gray-100.text-sm(class="dark:divide-gray-700")
      block

mixin listItem(title="")
  .grid.grid-cols-1.gap-1.p-3(class="sm:grid-cols-4 sm:gap-4")&attributes(attributes)
    dt.font-medium.text-gray-900(class="dark:text-white") #{ title }
    dd.text-gray-700(class="sm:col-span-3 dark:text-gray-200")
      block

mixin input
  input.rounded-lg.border.border-gray-200.bg-white.px-3.py-2.text-gray-700(
    class="placeholder-gray-400/70 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
  )&attributes(attributes)
