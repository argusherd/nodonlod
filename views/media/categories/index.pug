extends ../_layout.pug

block append body
  +buttonGroup.mb-4
    +buttonInGroup(
      hx-get=`/media/${medium.id}/categories/create`,
      hx-target="#modal",
      type="button"
    )
      i.text-xl(class="icon-[material-symbols--add]")
      span= __("Add")

  +list
    each labels, category in categories
      +listItem(__(category))
        .flex.flex-wrap.gap-1
          each label in labels
            +buttonGroup
              +buttonInGroup= label.text
