extends ../_layout.pug

block append body
  +buttonGroup.mb-4
    +buttonInGroup(
      hx-get=`/media/${medium.id}/playlists/add`,
      hx-target="#modal",
      type="button"
    )
      i.text-xl(class="icon-[material-symbols--add]")
      span= __("Add")

  #playlists(
    hx-get=`/media/${medium.id}/playlists?_list`,
    hx-trigger="refresh-playlists from:body"
  )
    include _list.pug
