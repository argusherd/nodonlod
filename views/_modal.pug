#modal-container(
  @close-modal.window="show = false",
  @open-modal.window="show = true",
  x-data="{ show: false }"
)
  .fixed.left-0.top-0.z-10.h-full.w-full.bg-black.bg-opacity-20(
    @click="show = false",
    class="dark:bg-white dark:bg-opacity-20",
    x-show="show"
  )
  .fixed.z-10.w-full.overflow-y-auto.rounded-lg.bg-white.p-4(
    class="left-1/2 top-1/2 max-h-[90vh] -translate-x-1/2 -translate-y-1/2 sm:w-2/3 dark:bg-gray-900",
    x-show="show",
    x-transition:enter="transition ease-out duration-100",
    x-transition:enter-end="opacity-100 scale-100",
    x-transition:enter-start="opacity-0 scale-90",
    x-transition:leave="transition ease-in duration-100",
    x-transition:leave-end="opacity-0 scale-90",
    x-transition:leave-start="opacity-100 scale-100"
  )
    #modal
