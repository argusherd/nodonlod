mixin breadcrumb({ href, icon, name })
  i.text-xl(class="icon-[mingcute--right-line]")

  a.flex.items-center.gap-2(
    class="last:text-blue-600 hover:underline last:dark:text-blue-400",
    href=href
  )
    i.text-xl(class=icon)
    span.hidden(class="sm:inline-block") #{ name }

mixin error(key)
  if errors && errors[key]
    span.text-red-500= errors[key].msg
