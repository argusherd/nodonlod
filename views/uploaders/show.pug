extends ../_layout.pug

block body
  h2.mb-2.text-xl.font-bold #{ __("Uploader") }

  h3.text-lg.font-bold #{ uploader.name }

  .mb-4.flex.gap-2
    p.overflow-hidden.break-words #{ uploader.url }
    button.flex.items-center.text-lg
      +copyIcon(uploader.url)

  .mb-2.flex.gap-2
    each medium in media
      include ../media/_widget.pug

  != paginator({ path: "/playlists", qs: qs(), count })
