doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title nodonlod
    link(rel="stylesheet", href="/css/app.css")
    script(src="/js/app.js")

  body(hx-boost="true")
    a(href="/extractions") + Create
    a(href="/") Home
    a(href="/playables") Playables
    a(href="/playlists") Playlists
    block body

    #player-container(hx-ext="ws", ws-connect="/", hx-preserve)
      #player

    #play-queue-container(x-data="{ show: false }", hx-preserve)
      button(
        @click="show = !show; $nextTick(() => htmx.process($el.parentNode))"
      ) Open play queue
      template(x-if="show")
        #play-queue(hx-get="/play-queues", hx-trigger="load")
