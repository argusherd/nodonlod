.flex.gap-4.text-gray-600(class="dark:text-gray-300")
  a.shrink-0(href=`/playlists/${playlist.id}`)
    img.size-20.rounded-lg.bg-black.object-cover(
      alt=playlist.title,
      class="sm:size-40",
      src=playlist.thumbnail
    )

  .flex.flex-col.gap-2
    a.font-bold.text-gray-800(
      class="text-lg/tight dark:text-gray-300",
      href=`/playlists/${playlist.id}`
    ) #{ playlist.title }

    p.line-clamp-3.text-gray-700(class="mt-0.5 dark:text-gray-400") #{ playlist.description }

    .mt-auto.flex.w-fit.divide-x.rounded-lg.border.bg-white(
      class="rtl:flex-row-reverse dark:divide-gray-700 dark:border-gray-700 dark:bg-gray-900"
    )
      button.flex.items-center.gap-x-2.p-1.text-sm.text-gray-600.transition-colors.duration-200(
        class="hover:bg-gray-100 sm:px-2 sm:text-base dark:text-gray-300 dark:hover:bg-gray-800",
        hx-get=`/playlists/${playlist.id}/play`,
        hx-swap="none",
        title=__("Play")
      )
        i.text-2xl(class="icon-[teenyicons--play-solid]")
      button.flex.items-center.gap-x-2.p-1.text-sm.text-gray-600.transition-colors.duration-200(
        class="hover:bg-gray-100 sm:px-2 sm:text-base dark:text-gray-300 dark:hover:bg-gray-800",
        hx-post=`/playlists/${playlist.id}/queue`,
        hx-swap="none",
        title=__("Add to The Queue")
      )
        i.text-2xl(class="icon-[ph--stack-light]")
