include /_mixin.pug

form.flex.flex-col.gap-2(
  action=`${basePath || ''}/playlists`,
  hx-target="#modal",
  method="POST"
)
  h2.mb-4.text-lg.font-bold.text-gray-700(class="dark:text-gray-300")= __("Create a new playlist")

  +list
    +listItem(__("Title"))
      +input.w-full(name="title")
      +error('title')

    +listItem(__("Thumbnail"))
      +input.w-full(name="thumbnail")

    +listItem(__("Description"))
      +textarea.w-full(name="description")

  +buttonGroup.ml-auto
    +buttonGroup
      +buttonInGroup#save(type="submit")
        i.text-2xl(class="icon-[material-symbols--save-outline]")
        span= __("Save")
      +buttonInGroup#cancel(@click="show = false", type="button")
        i.text-2xl(class="icon-[material-symbols--close]")
        span= __("Cancel")
