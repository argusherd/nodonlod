include /_mixin.pug

form.mb-4.flex.flex-wrap.items-center.justify-between.gap-2(
  action=`${basePath}/playlists/add?_list`,
  hx-swap="show:none",
  hx-target="#search-result",
  hx-trigger="sort-changed from:body, input from:input changed delay:250ms"
)
  - var query = qs();

  +input(
    autofocus="",
    name="search",
    placeholder=__("Search"),
    type="search"
  )

  include /playlists/_sort.pug

#search-result
  include _list.pug
