include /_mixin.pug

form.flex.flex-col.gap-2(
  action=`${basePath || ""}/labels`,
  hx-target="#modal",
  method="POST"
)
  h2.mb-4.text-lg.font-bold.text-gray-700(class="dark:text-gray-300")= __("Create a new label")

  +list
    +listItem(__("Category"))
      +input.w-full(name="category")

    +listItem(__("Text"))
      +input.w-full(name="text")
      +error("text")

  +buttonGroup.ml-auto
    +buttonGroup
      +buttonInGroup#save(type="submit")
        i.text-2xl(class="icon-[material-symbols--save-outline]")
        span= __("Save")
      +buttonInGroup#cancel(@click="show = false", type="button")
        i.text-2xl(class="icon-[material-symbols--close]")
        span= __("Cancel")
