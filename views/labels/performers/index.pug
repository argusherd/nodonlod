extends ../_layout.pug

block append body
  +buttonGroup.mb-4
    +buttonInGroup(
      hx-get=`/labels/${label.id}/performers/add`,
      hx-target="#modal"
    )
      i.text-xl(class="icon-[material-symbols--add]")
      span= __("Add")
    +buttonInGroup(
      hx-get=`/labels/${label.id}/performers/create`,
      hx-target="#modal"
    )
      i.text-xl(class="icon-[gridicons--create]")
      span= __("Create")

  #performers(
    hx-get=`/labels/${label.id}/performers?_list`,
    hx-trigger="refresh-performers from:body"
  )
    include _list.pug
