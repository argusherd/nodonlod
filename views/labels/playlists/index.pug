extends ../_layout.pug

block append body
  +buttonGroup.mb-4
    +buttonInGroup(
      hx-get=`/labels/${label.id}/playlists/add`,
      hx-target="#modal",
      type="button"
    )
      i.text-xl(class="icon-[material-symbols--add]")
      span= __("Add")
    +buttonInGroup(
      hx-get=`/labels/${label.id}/playlists/create`,
      hx-target="#modal",
      type="button"
    )
      i.text-xl(class="icon-[gridicons--create]")
      span= __("Create")

  #playlists(
    hx-get=`/labels/${label.id}/playlists?_list`,
    hx-trigger="refresh-playlists from:body"
  )
    include _list.pug
