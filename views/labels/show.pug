extends _layout.pug

block append sticky
  +buttonGroup
    +buttonInGroup(
      hx-include="#form",
      hx-put=`/labels/${label.id}`,
      hx-target="#form",
      title=__("Save")
    )
      include /_mixin/button-savable.pug
    +buttonInGroup(
      hx-delete=`/labels/${label.id}/confirm`,
      hx-target="#modal",
      title=__("Delete"),
      type="button"
    )
      i.text-xl(class="icon-[material-symbols--delete-outline]")
      span.hidden(class="sm:inline-block")= __("Delete")

block body
  #form.mb-4
    include _info.pug
