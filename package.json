{
  "name": "nodonlod",
  "version": "0.0.1",
  "description": "Your personal media platform resource collection/database.",
  "main": "main/index.js",
  "scripts": {
    "build": "webpack && npm run tailwind",
    "clear": "rimraf dist main database.sqlite",
    "dev": "tsc && electron --trace-warnings .",
    "dist": "npm run build && tsc && electron-builder --config electron-builder.config.js --dir",
    "migrator": "ts-node database/migrator.ts",
    "migrator:create": "ts-node database/migrator.ts create --skip-verify --folder database/migrations --name",
    "postinstall": "electron-builder install-app-deps",
    "tailwind": "tailwindcss -o public/css/app.css --minify",
    "test": "jest --watch",
    "watch": "concurrently \"npm:watch:*\" \"npm:dev\"",
    "watch:tailwind": "npm run tailwind -- --watch",
    "watch:webpack": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argusherd/nodonlod.git"
  },
  "author": "argusherd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/argusherd/nodonlod/issues"
  },
  "homepage": "https://github.com/argusherd/nodonlod#readme",
  "dependencies": {
    "alpinejs": "^3.13.10",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "node-schedule": "^2.1.1",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.35.2",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.6",
    "umzug": "^3.6.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@iconify/json": "^2.2.217",
    "@iconify/tailwind": "^1.1.1",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/alpinejs": "^3.13.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "@types/node-schedule": "^2.1.6",
    "@types/pug": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "htmx.org": "^1.9.10",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  }
}
